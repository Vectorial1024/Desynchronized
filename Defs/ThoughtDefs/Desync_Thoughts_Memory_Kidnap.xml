<Defs>
    <ThoughtDef Name="KidnapMemory" Abstract="True">
        <stackLimit>5</stackLimit>
    </ThoughtDef>

    <ThoughtDef ParentName="KidnapMemory">
        <defName>KnowColonistKidnapped</defName>
        <durationDays>3</durationDays>
        <stackLimit>5</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li>Bloodlust</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>colonist kidnapped</label>
                <description>One of our people was kidnapped. I don't feel safe staying around.</description>
                <!-- Carefully calibrated to give a nice curve of 2, 3, 4, 5, 6. Don't ever touch it. -->
                <baseMoodEffect>-1.9</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="KidnapMemory">
        <defName>PawnWithGoodOpinionWasKidnapped</defName>
        <durationDays>40</durationDays>
        <stackLimit>5</stackLimit>
        <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>my friend {0} was kidnapped</label>
                <description>Such a wonderful person, falling into enemy's hands. Will I ever see them again?</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="KidnapMemory">
		<defName>PawnWithBadOpinionWasKidnapped</defName>
		<durationDays>20</durationDays>
		<stackLimit>5</stackLimit>
		<stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
